@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

<link href="~/css/site.css" rel="stylesheet" />

@{
    ViewData["Title"] = "Log in";
    Layout = "~/Views/Shared/IndexLayout.cshtml";
}

<div id="preloader"></div>

<section class="about-us">
    <div class="logo_menu" id="sticker">
        <div class="container">
            <div class="row">
                <div class="col-md-2 col-lg-2 col-sm-2 col-xs-6">
                    <div class="logo">
                        <a asp-controller="Home" asp-action="Index"><h3 style="color:white; font-weight:bold">CSMS</h3></a>
                    </div>
                </div>
                <div class="col-md-6 col-xs-6 col-md-offset-1 col-sm-7 col-lg-offset-1 col-lg-6 mobMenuCol">
                    <nav class="navbar">
                        <!-- Collect the nav links, forms, and other content for toggling -->
                        <ul class="nav navbar-nav navbar-right menu">
                            <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                            <li><a asp-controller="Home" asp-action="About">About</a></li>
                            <li><a asp-controller="Home" asp-action="Services">Services</a></li>
                            <li><a asp-controller="Home" asp-action="Pricing">Pricing</a></li>
                            <li><a asp-controller="Home" asp-action="Contact">Contact</a></li>
                        </ul>
                        <!-- /.navbar-collapse -->
                    </nav>
                </div>
                <div class="col-md-3 col-sm-3 col-xs-4 col-lg-3 signup">
                    <ul class="nav navbar-nav">
                        <li></li>
                        <li><a asp-controller="Account" asp-action="Login">login</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="loginbox">
    <img src="~/images/avatar.png" class="avatar" />

    <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
        <h1>Login Here</h1>
        <div asp-validation-summary="All" class="text-danger"></div>

        <label asp-for="Email"></label>
        <input asp-for="Email" placeholder="Enter Email Address" />
        <span asp-validation-for="Email" class="text-danger"></span>

        <label asp-for="Password"></label>
        <input asp-for="Password" placeholder="Enter Password" />
        <span asp-validation-for="Password" class="text-danger"></span>

        <input type="submit" value="Log in" />

        <div class="form-group">
            <p>
                <a asp-action="ForgotPassword">Forgot your password?</a>
            </p>
            <p>
                <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">Register as a new user?</a>
            </p>
        </div>

    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
