
@{
    ViewData["Title"] = "CreateRole";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="well">
    <h3 class="alert bg-primary text-center">Create New Role</h3>
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <div><h4 class="text-center text-info">@ViewBag.msg</h4></div>
            <hr />
            <form class="form-horizontal" asp-controller="Account" asp-action="CreateRole" method="post">
                <div class="form-group">
                    <label class="control-label col-sm-4">Role Name:</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" name="rolename" value="" placeholder="Please type role name..." />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-4">
                        <input type="submit" class="btn btn-success" value="Create Role" />
                        <a asp-action="RoleIndex" class="btn btn-primary">Role List</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>



