@*@model IEnumerable<CMS.Models.Percel>*@
@model CMS.Models.Percel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    var serial = 1;
}

<div class="well">
    <h4 class="alert bg-primary text-center">Percel List</h4>
    <hr />
    <form asp-action="Index" class="form-inline">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <label asp-for="Code" class="control-label">Percel Code :</label>
        <input asp-for="Code" class="form-control" placeholder="Enter percel Code" />
        <input type="submit" value="Receive" class="btn btn-success form-control" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </form>
    <hr />
    <table class="table table-bordered table-hover table-condensed" id="myTable">
        <thead>
            <tr class="bg-primary">
                <th>SL No.</th>
                <th>
                    @Html.DisplayNameFor(model => model.Code)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Sender)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Receiver)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Branch)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ReceivingDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Weight) (Kg.)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cost) (Tk.)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.Percels)
            {
                if (serial % 2 == 0)
                {
                    <tr class="warning">
                        <td>@serial.</td>
                        <td>
                            @item.Code
                        </td>
                        <td>
                            @item.Sender.Name
                        </td>
                        <td>
                            @item.Receiver.Name
                        </td>
                        <td>
                            @item.Branch.Name
                        </td>
                        <td>
                            @item.ReceivingDate
                        </td>
                        <td>
                            @item.Weight
                        </td>
                        <td>
                            @item.Cost
                        </td>
                        <td>
                            @item.Status
                        </td>
                        <td>
                            <a asp-action="Deliver" asp-route-id="@item.Id" class="btn btn-warning btn-xs">Deliver</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-xs">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-xs">Delete</a>
                        </td>
                    </tr>
                }
                else
                {
                    <tr class="success">
                        <td>@serial.</td>
                        <td>
                            @item.Code
                        </td>
                        <td>
                            @item.Sender.Name
                        </td>
                        <td>
                            @item.Receiver.Name
                        </td>
                        <td>
                            @item.Branch.Name
                        </td>
                        <td>
                            @item.ReceivingDate
                        </td>
                        <td>
                            @item.Weight
                        </td>
                        <td>
                            @item.Cost
                        </td>
                        <td>
                            @item.Status
                        </td>
                        <td>
                            <a asp-action="Deliver" asp-route-id="@item.Id" class="btn btn-warning btn-xs">Deliver</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-xs">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-xs">Delete</a>
                        </td>
                    </tr>
                }

                serial++;
            }
        </tbody>
    </table>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
}