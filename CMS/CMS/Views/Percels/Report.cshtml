                    </table>
                </td>
                <td class="col-md-4">
                    <table>
                        <tr><th>Percel Id: </th><td> @Model.Id</td></tr>
                        <tr><th>Weight: </th><td> @Model.Weight</td></tr>
                        <tr><th>Cost: </th><td>  @Model.Cost</td></tr>
                        <tr><th>Receiving Date: </th><td> @Model.ReceivingDate</td></tr>
                    </table>
                </td>
            </tr>
            <tr class="row">
                <td class="col-md-4">
                    <br />
                    <br />
                    <br />
                    <br />
                    <br />
                    <div>
                        <p>-------------------------------------------</p>
                        <p>Authorized Signature</p>
                    </div>
                </td>
            </tr>
        </table>
    </div>
    <div>
        <a asp-action="Index" class="btn btn-primary">Back to List</a>
        <button id="pbtn" class="btn btn-success" onclick="printdiv('print');">Print</button>
    </div>
</div>

<script language="javascript">
    function printdiv(printpage) {
        var newstr = document.all.item(printpage).innerHTML;
        var oldstr = document.body.innerHTML;
        document.body.innerHTML = newstr;
        window.print();
        document.body.innerHTML = oldstr;
        return false;
    }
</script>

